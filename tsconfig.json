{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2022", "dom"]  // Include "es2022" to target the latest features supported by Node.js 22
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ]
}
